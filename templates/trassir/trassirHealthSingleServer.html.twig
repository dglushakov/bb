{% extends 'home.html.twig' %}

{% block main %}
    <div class="row">
        <div class="col text-center">
            <h2>{{ (server.name is defined) ? server.name : server.ip }}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Date</th>
                    {% for healthPoint in constant('App\\Entity\\TrassirNvrData::HEALTH_POINTS') %}
                        <th>{{ healthPoint }}</th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>

                {% for healthDate, trassirHealthData in trassirHealth %}
                    <tr>
                        <td>{{healthDate}}</td>

                        {% for healthParameter in trassirHealthData %}
                            <td>{{ healthParameter }}</td>
                        {% endfor %}
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}