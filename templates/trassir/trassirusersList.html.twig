{% extends 'home.html.twig' %}

{% block main %}
    <table class="table table-striped mt-4">
        <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                Login
            </th>
            {% for key, nvr in nvrList %}
                {% if nvr.Id is defined %}
                    <th class="col text-nowrap">
                        {% if nvr.name is defined and nvr.name!="" %}
                            {{ nvr.name }}
                        {% else %}
                            {{ nvr.Ip }}
                        {% endif %}
                    </th>
                {% endif %}
            {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for userName, user in trassirUsers %}
            <tr>
                <td>
                    {{ loop.index }}
                </td>
                <td class="col text-nowrap" title="{{ user.ip|join(', \n') }}">
                    {{ userName }}
                </td>
                {% for key, nvr in nvrList %}

                    {% if nvr.ip in user.ip %}
                        <td class="text-center" title="{{ nvr.ip }} {{ nvr.name }}">
                            +
                        </td>
                    {% else %}
                        <td>

                        </td>
                    {% endif %}
                {% endfor %}
            </tr>
        {% endfor %}
        </tbody>

    </table>



{% endblock %}